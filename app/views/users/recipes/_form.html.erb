<%  @kitchen = ['Belgisch', 'Brits', 'Chinees', 'Frans', 'Grieks', 'Indonesisch', 'Indiaas', 'Italiaans', 'Japans', 'Marokkaans', 'Midden-Oosters', 'Mexicaans', 'Nederlands', 'Portugees', 'Scandinavisch' 'Spaans', 'Thais', 'Turks'] %>
<% @season = ['Zomer', 'Herfst', 'Winter', 'Lente'] %>
<% @category = ['Vis', 'Vlees','Vegetarisch'] %>
<% @course = ['Voorgerecht', 'Hoofdgerecht', 'Nagerecht'] %>
<div class="form-background">
  <div class="login-block">
  <h1>Recept</h1>
    <hr>

    <%= simple_form_for([:users, @recipe]) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name, :label => "Recept naam" %>
    <%= f.input :summary, hint: "max 30 tekens", :label => "Samenvatting", placeholder: "Geeft een korte samenvatting. bv: Een zomers gerecht met kip" %>
    <%= f.input :course, :label => "Gang", :collection => @course %>
    <%= f.input :kitchen, :label => "Keuken", :collection => @kitchen %>
    <%= f.input :category, :label => "Categorie", :collection => @category %>
    <%= f.input :season, :label => "Seizoen", :collection => @season %>
    <br>
    <%= f.input :number_of_persons, :label => "Aantal personen" %>
    <%= f.input :prep_time, :label => "Voorbereidingstijd" %>
    <%= f.input :cooking_time, :label => "Kooktijd" %>
    <br>
    <div class="text-center" id="ingredients">
      <%= f.simple_fields_for :ingredients do |ingredient| %>
      <%= render 'ingredient_fields', f: ingredient %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Voeg ingrediÃ«nt toe', f, :ingredients, class: "btn btn-primary" %>
      </div>
    </div>
    <br>
    <%= f.input :description, :label => "Beschrijving", placeholder: "Geef uitleg over de bereiding van het recept." %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>


    <hr>
    <%= f.submit "Voeg toe", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
