<div class="form-background">
  <div class="login-block">
    <h1>Edit profile</h1>
    <hr>
    <%= simple_form_for(@user, url: profile_path) do |f| %>
    <%= f.error_notification %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Update", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
