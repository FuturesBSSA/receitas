  <div class="product">
    <div class='product-upvote'>
      <%= render 'recipes/recipe_upvote', recipe: recipe %>
    </div>
      <% if recipe.photo.present? %>
      <%= cl_image_tag recipe.photo, height: 150, width: 200, crop: :fill, class: "product-image hidden-xs" %>
      <% else %>
      <%= image_tag "http://ingridwu.dmmdmcfatter.com/wp-content/uploads/2015/01/placeholder.png",height: 150, width: 200, crop: :fill, class: "product-image hidden-xs"%>
      <% end %>
    <div class='product-body'>
    <%= link_to recipe_path(recipe) do %>
      <h3><%= recipe.name  %></h3>
    <% end %>
      <div class="summary">
        <p><%= recipe.summary %></p>
      </div>

      <div class="recipes-info">
        <div class="recipes-kitchen">
          <p>Gang</p>
          <h5> <%= recipe.course %> </h5>
        </div>

        <div class="recipes-kitchen">
          <p>Keuken</p>
          <h5> <%= recipe.kitchen %> </h5>
        </div>

        <div class="cooking-time">
          <p>Bereiding</p>
          <% @prep = 0 %>
          <%@prep = recipe.prep_time.to_i + recipe.cooking_time.to_i%>
          <h5><%= @prep %> min</h5>
        </div>

        <div class="created">
          <p>Geplaatst op</p>
          <h5><%= recipe.created_at.strftime('%d/%m/%Y') %> </h5>
        </div>
      </div>
    </div>

    <ul class="list-inline product-controls">
      <!-- <li><a href=""><i class="fa fa-heart"></i></a></li> -->
      <% if current_page?(profile_url) %>
        <li><%= link_to edit_users_recipe_path(recipe) do %>
          <i class="fa fa-edit"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
